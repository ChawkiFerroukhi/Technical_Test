{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@repositories/*": [
        "repositories/*"
      ],
      "@entities/*": [
        "entities/*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@factories/*": [
        "factories/*"
      ],
      "@models/*": [
        "models/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}